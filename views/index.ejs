<% extend('layout') %>

    <!-- Page Header -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">News
                <small>top news</small>
            </h1>
        </div>
    </div>
    <!-- /.row -->

    <!-- Projects Row -->
    <div  id="masonryContainer">
        <% for(var i=0; i< news.length; i++) {%>
        <div class="item">

            <h3>
                <a href="#"><%= news[i].title; %></a>
            </h3>
            <p><%= news[i].short_description; %></p>
        </div>
        <% } %>

    </div>
    <!-- /.row -->
